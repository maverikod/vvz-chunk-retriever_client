      "ToolDescription": {
        "type": "object",
        "title": "Tool Description",
        "description": "Description of the microservice tool",
        "properties": {
          "name": {
            "type": "string",
            "description": "Name of the tool"
          },
          "description": {
            "type": "string",
            "description": "Tool for executing microservice commands.\n\n## Available commands:\nconfig, health, help, find_chunks_by_source_id\n\n## Getting help:\n- Without parameters (list of all commands): \n  {\"jsonrpc\": \"2.0\", \"method\": \"help\", \"id\": 1}\n  \n- With parameters (information about a specific command): \n  {\"jsonrpc\": \"2.0\", \"method\": \"help\", \"params\": {\"command\": \"command_name\"}, \"id\": 1}\n"
          },
          "version": {
            "type": "string",
            "description": "Tool version"
          },
          "help_examples": {
            "type": "object",
            "description": "Examples of using the help command",
            "properties": {
              "without_params": {
                "type": "object",
                "description": "Get a list of all commands"
              },
              "with_params": {
                "type": "object",
                "description": "Get information about a specific command"
              }
            },
            "example": {
              "without_params": {
                "jsonrpc": "2.0",
                "method": "help",
                "id": 1
              },
              "with_params": {
                "jsonrpc": "2.0",
                "method": "help",
                "params": {
                  "command": "config"
                },
                "id": 1
              }
            }
          },
          "available_commands": {
            "type": "array",
            "description": "List of available commands",
            "items": {
              "type": "string"
            },
            "example": [
              "config",
              "health",
              "help",
              "find_chunks_by_source_id"
            ]
          }
