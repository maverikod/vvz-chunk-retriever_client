          "command"
        ],
        "properties": {
          "command": {
            "title": "Command",
            "description": "Команда для выполнения",
            "type": "string",
            "enum": [
              "config",
              "health",
              "help",
              "find_chunks_by_source_id"
            ]
          },
          "params": {
            "title": "Parameters",
            "description": "Параметры команды, зависят от типа команды",
            "type": "object",
            "additionalProperties": true,
            "oneOf": [
              {
                "$ref": "#/components/schemas/ConfigParams"
              },
              {
                "$ref": "#/components/schemas/HealthParams"
              },
              {
                "$ref": "#/components/schemas/HelpParams"
              },
              {
                "$ref": "#/components/schemas/Find_chunks_by_source_idParams"
              },
              {
                "type": "null"
              }
            ]
          }
        }
      },
      "CommandResponse": {
