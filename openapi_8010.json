          },
          "method": {
            "type": "string",
            "title": "Method",
            "description": "Method name to call"
          },
          "params": {
            "additionalProperties": true,
            "type": "object",
            "title": "Params",
            "description": "Method parameters",
            "default": {}
          },
          "id": {
            "anyOf": [
              {
                "type": "string"
              },
              {
                "type": "integer"
